<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="2" name="SauceDemo Smoke Test" parallel="methods">
    <listeners>
        <listener class-name="tests.TestListener"/>
        <listener class-name="tests.AnnotationTransformer"/>
    </listeners>
    <test name="Chrome">
        <groups>
            <run>
                <include name="Smoke"/>
            </run>
        </groups>
        <classes>
            <class name="tests.LoginTest"/>
            <class name="tests.ProductsTest"/>
            <class name="tests.ProductsDetailTest"/>
            <class name="tests.CartTest"/>
            <class name="tests.NavigationModuleTest"/>
            <class name="tests.CheckoutTest"/>
            <parameter name="browser" value="chrome"/>
        </classes>
    </test> <!-- Test -->
    <test name="FireFox">
        <groups>
            <run>
                <include name="Smoke"/>
            </run>
        </groups>
        <classes>
            <class name="tests.LoginTest"/>
            <class name="tests.ProductsTest"/>
            <class name="tests.ProductsDetailTest"/>
            <class name="tests.CartTest"/>
            <class name="tests.NavigationModuleTest"/>
            <class name="tests.CheckoutTest"/>
            <parameter name="browser" value="firefox"/>
        </classes>
    </test> <!-- Test -->
</suite>
